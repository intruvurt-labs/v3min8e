{
  "name": "nimrev-verm-airdrop",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "NimRev VERM Token Airdrop Platform - Blockchain Security & Intelligence",
  "homepage": "https://nimrev.xyz",
  "repository": {
    "type": "git",
    "url": "https://github.com/nimrev/verm-airdrop"
  },
  "keywords": [
    "VERM",
    "airdrop",
    "blockchain",
    "crypto",
    "security",
    "web3",
    "solana",
    "ethereum"
  ],
  "pkg": {
    "assets": [
      "dist/spa/*"
    ],
    "scripts": [
      "dist/server/**/*.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "vite build --config vite.config.server.ts",
    "start": "node index.js",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "format.fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "audit": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix --force",
    "analyze": "npx vite-bundle-analyzer dist/spa",
    "clean": "rm -rf dist node_modules/.vite .turbo coverage",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u",
    "size": "npm run build && npx bundlesize",
    "prepare": "husky install || true"
  },
